{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	{{ form_errors(registrationForm) }}
	<div class="d-flex flex-wrap justify-content-center" style="padding-bottom: 30px;">
		<div class="card my-5 pt-3 px-2 mx-5 col-3" style="width: 19rem;" id="card-inscription">
			<div class="card-body">
				<h5 class="card-title" id="card-text">Inscription</h5>
				<p class="card-text">
					{{ form_start(registrationForm) }}
					{{ form_row(registrationForm.email, {label: 'Adresse mail'}) }}
					{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}<br>
					{{ form_row(registrationForm.agreeTerms) }}
                    <br>
					<button type="submit" id="btn-style" style="margin-left: 60px;">Inscription <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" style="margin-left: 5px; margin-bottom: 4px;" fill="currentColor" class="bi bi-person-check-fill" viewBox="0 0 16 16"><path fill-rule="evenodd" d="M15.854 5.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L12.5 7.793l2.646-2.647a.5.5 0 0 1 .708 0z"/><path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/></svg></button>
					{{ form_end(registrationForm) }}
				</p>
			</div>
		</div>
	</div>
{% endblock %}
