{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
<pre>
    {{ dump(app.user) }}
</pre>
<pre>
  {{ dump(user) }}
</pre>
<pre>
    {{ dump(commande) }}
</pre>
<pre>
    {{ dump(detail) }}
</pre>
{# <pre>
  {{ dump(plat) }}
</pre> #}

    {% if app.user.nom is null %}
        <p>Veuillez d'abord renseigner vos informations personnelles !</p>
    {% else %}
    <div class="d-flex flex-wrap justify-content-center">
        <div class="card" style="width: 18rem; margin-bottom: 5px;">
            <div class="card-body">
                <h5 class="card-title">Profil <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" style="margin-bottom: 4px;" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16"><path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/><path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/></svg></h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">Vos informations <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" style="margin-bottom: 4px;" fill="currentColor" class="bi bi-person-vcard-fill" viewBox="0 0 16 16"><path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm9 1.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4a.5.5 0 0 0-.5.5ZM9 8a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4A.5.5 0 0 0 9 8Zm1 2.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5Zm-1 2C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1 1 0 0 0 2 13h6.96c.026-.163.04-.33.04-.5ZM7 6a2 2 0 1 0-4 0 2 2 0 0 0 4 0Z"/></svg></h6>
                <p class="card-text">{{app.user.nom}} {{app.user.prenom}}<br><br>{{app.user.email}}<br>{{app.user.telephone}}<br><br>{{app.user.adresse}}<br>{{app.user.cp}}<br>{{app.user.ville}}</p>
                <a href="#" class="card-link">Modifier vos informations</a><br>
                {# <a href="#" class="card-link">Modifier votre adresse de livraison</a> #}
            </div>
        </div>
    </div>

  
  {% for c in commande %}
  <div class="d-flex flex-wrap justify-content-center">
   <div class="card" style="width: 18rem; margin-bottom: 5px; margin-top: 5px;">
  <div class="card-body">
    <h5 class="card-title">Commande du {{c.getDateCommande().format('d/m/Y')}}</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary"></h6>
    <p class="card-text">
    {% for p in plat %}
    {% for d in detail %}
      {% if c.id == d.commande.id %}
      {% if p.id == d.plat.id %}
     {{p.libelle}}<br>Quantite {{d.quantite}}<br><br>
      {% endif %}
      {% endif %}
    {% endfor %}
    {% endfor %}
    {{c.total}}€<br>
    {% if c.etat == 0 %}Enregistré{% endif %}
    {% if c.etat == 1 %}En préparation{% endif %}
    {% if c.etat == 2 %}En cours de livraison{% endif %}
    {% if c.etat == 3 %}Livrée{% endif %}
    {% if c.etat == 4 %}Annulée{% endif %}
    </p>
    {% if c.etat != 4 and c.etat != 3 %}
        <a href="{{ path('app_profil', {'etat ': 4}) }}" class="card-link">Annuler la commande</a>
    {% endif %}
  </div>
</div>
</div>
{% endfor %}

    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <br><h3>admin<h3> 
    {% endif %}
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <br><h3>super admin</h3>
    {% endif %}
    
{# {% else %} 
<p>vous devez vous connecter, pour voir cette page</p>
{% endif %} #}
{% endblock %}
